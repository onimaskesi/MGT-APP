<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2699FB"
    tools:context=".ParolaOlusturmaActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="192dp"
        android:layout_height="32dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="10dp"
        android:text="Parola Tekrar"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ParolaTekrar"
        app:layout_constraintEnd_toEndOf="@+id/ParolaTekrar"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/ParolaTekrar"
        app:layout_constraintTop_toBottomOf="@+id/parola" />

    <EditText
        android:id="@+id/ParolaTekrar"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/layout_bg"
        android:ems="10"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/Girisbtn"
        app:layout_constraintCircleRadius="?attr/dialogCornerRadius"
        app:layout_constraintEnd_toEndOf="@+id/parola"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/parola"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="192dp"
        android:layout_height="32dp"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="10dp"
        android:text="Parola"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/parola"
        app:layout_constraintEnd_toEndOf="@+id/parola"
        app:layout_constraintStart_toStartOf="@+id/parola"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/parola"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:background="@drawable/layout_bg"
        android:ems="10"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintCircleRadius="?attr/dialogCornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="164dp" />

    <Button
        android:id="@+id/Girisbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/layout_bg"
        android:onClick="tamam_click"
        android:text="Tamam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ParolaTekrar"
        app:layout_constraintStart_toStartOf="@+id/ParolaTekrar"
        app:layout_constraintTop_toBottomOf="@+id/ParolaTekrar" />

</androidx.constraintlayout.widget.ConstraintLayout>